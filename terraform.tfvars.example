# Example Terraform variables file
# Copy this to terraform.tfvars and modify as needed

# Environment - determines resource creation behavior
# "nonprod" - creates both source and destination buckets and KMS keys
# "prod" - only creates source bucket and key, assumes destination exists
env = "nonprod"

# AWS region for deployment
aws_region = "ap-southeast-2"

# S3 bucket names (must be same length)
source_bucket_names      = ["dg-outbound-1", "dg-outbound-2", "dg-outbound-3", "dg-outbound-4"]
destination_bucket_names = ["dg-outbound-replica-1", "dg-outbound-replica-2", "dg-outbound-replica-3", "dg-outbound-replica-4"]

# KMS key ARNs (optional - if not provided, keys will be created)
# Single key for all source buckets, single key for all destination buckets
source_kms_key_arn = null
# source_kms_key_arn = "arn:aws:kms:ap-southeast-2:123456789012:key/12345678-1234-1234-1234-123456789012"

destination_kms_key_arn = null
# destination_kms_key_arn = "arn:aws:kms:ap-southeast-2:123456789012:key/87654321-4321-4321-4321-210987654321"

# IAM role name
replication_role_name = "s3-same-region-replication-role"

# Environment tag
environment = "production"

# KMS configuration (only applies to created keys)
kms_deletion_window = 7
enable_kms_rotation = true